<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/include_layout_main_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/line" />

            <RelativeLayout
                android:id="@+id/rl_layout_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="18dp"
                android:paddingTop="15dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="头        像"
                    android:textColor="@color/text_base"
                    android:textSize="14sp" />


                <ImageView
                    android:id="@+id/icon_go_image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_go" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/edit_user_info_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/icon_go_image"
                    android:src="@mipmap/icon_mine_head_default" />


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line2" />

            <RelativeLayout
                android:id="@+id/rl_layout_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="18dp"
                android:paddingTop="10dp">


                <TextView
                    android:id="@+id/edit_user_info_name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="姓        名"
                    android:textColor="@color/text_base"
                    android:textSize="14sp" />


                <ImageView
                    android:id="@+id/icon_go_name"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_go"
                    android:visibility="invisible" />


                <EditText
                    android:id="@+id/edit_user_info_name"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/icon_go_name"
                    android:background="@null"
                    android:gravity="right|center"
                    android:inputType="text"
                    android:maxLength="20"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@null"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textSize="14sp" />


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line2" />

            <RelativeLayout
                android:id="@+id/rl_layout_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="18dp"
                android:paddingTop="15dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="手  机  号"
                    android:textColor="@color/text_base"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/icon_go_phone"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_go" />

                <TextView
                    android:id="@+id/edit_user_info_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/icon_go_phone"
                    android:gravity="right"
                    android:maxLength="20"
                    android:textColor="@color/black"
                    android:textSize="14sp" />


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line2" />

            <RelativeLayout
                android:id="@+id/rl_layout_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="18dp"
                android:paddingTop="15dp">


                <TextView
                    android:id="@+id/edit_user_info_sex_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="性        别"
                    android:textColor="@color/text_base"
                    android:textSize="14sp" />


                <ImageView
                    android:id="@+id/icon_go_sex"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_go" />

                <TextView
                    android:id="@+id/edit_user_info_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/icon_go_sex"
                    android:gravity="right"
                    android:maxLength="20"
                    android:textColor="@color/black"
                    android:textSize="14sp" />


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/line" />




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="20dp"
                android:paddingRight="18dp">


                <com.fala.emba.team.view.CustomExpandableListView
                    android:id="@+id/edit_expandable_list_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/white"
                    android:divider="@color/line"
                    android:dividerHeight="1.5px"
                    android:groupIndicator="@null"
                    android:scrollbars="none" />


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="18dp"
                android:paddingTop="15dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="所在班级"
                    android:textColor="@color/text_base"
                    android:textSize="14sp" />


                <ImageView
                    android:id="@+id/icon_go_class"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_go"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/edit_user_info_class"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/icon_go_class"

                    android:gravity="right"
                    android:maxLines="5"
                    android:textColor="@color/black"
                    android:textSize="14sp" />


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line2" />

            <RelativeLayout
                android:id="@+id/rl_layout_identity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="18dp"
                android:paddingTop="15dp">


                <TextView
                    android:id="@+id/edit_user_info_identity_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="身        份"
                    android:textColor="@color/text_base"
                    android:textSize="14sp" />


                <ImageView
                    android:id="@+id/icon_go_identity"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_go" />

                <TextView
                    android:id="@+id/edit_user_info_identity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/icon_go_identity"
                    android:gravity="right"
                    android:maxLength="20"
                    android:textColor="@color/black"
                    android:textSize="14sp" />


            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="18dp"
                android:paddingTop="10dp">


                <TextView
                    android:id="@+id/edit_user_info_company_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="单        位"
                    android:textColor="@color/text_base"
                    android:textSize="14sp" />


                <ImageView
                    android:id="@+id/icon_go_company"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_go"
                    android:visibility="invisible" />

                <EditText
                    android:id="@+id/edit_user_info_company"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/icon_go_company"
                    android:background="@null"
                    android:gravity="right"
                    android:inputType="text"
                    android:maxLength="20"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@null"
                    android:textSize="14sp" />


            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="18dp"
                android:paddingTop="10dp">


                <TextView
                    android:id="@+id/edit_user_info_job_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="职        称"
                    android:textColor="@color/text_base"
                    android:textSize="14sp" />


                <ImageView
                    android:id="@+id/icon_go_job"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_go"
                    android:visibility="invisible"

                    />

                <EditText
                    android:id="@+id/edit_user_info_job"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/icon_go_job"
                    android:background="@null"
                    android:gravity="right"
                    android:inputType="text"
                    android:maxLength="20"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@null"
                    android:textSize="14sp" />


            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line2" />

            <RelativeLayout
                android:id="@+id/rl_layout_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="18dp"
                android:paddingTop="15dp">


                <TextView
                    android:id="@+id/edit_user_info_height_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="身        高"
                    android:textColor="@color/text_base"
                    android:textSize="14sp" />


                <ImageView
                    android:id="@+id/icon_go_height"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_go"

                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/icon_go_height"
                    android:gravity="right"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/edit_user_info_height"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="1dp"
                        android:layout_toLeftOf="@id/icon_go_height"
                        android:maxLength="20"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:text="CM"/>

                </LinearLayout>



            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line2" />

            <RelativeLayout
                android:id="@+id/rl_layout_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="18dp"
                android:paddingTop="15dp">


                <TextView
                    android:id="@+id/edit_user_info_birthday_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="生        日"
                    android:textColor="@color/text_base"
                    android:textSize="14sp" />


                <ImageView
                    android:id="@+id/icon_go_birthday"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_go" />

                <TextView
                    android:id="@+id/edit_user_info_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/icon_go_birthday"
                    android:gravity="right"
                    android:maxLength="20"
                    android:textColor="@color/black"
                    android:textSize="14sp" />


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="18dp"
                android:paddingTop="10dp">


                <TextView
                    android:id="@+id/edit_user_info_clothes_size_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="衣服尺寸"
                    android:textColor="@color/text_base"
                    android:textSize="14sp" />


                <ImageView
                    android:id="@+id/icon_go_clothes_size"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_go"
                    android:visibility="invisible" />

                <EditText
                    android:id="@+id/edit_user_info_clothes_size"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="7dp"
                    android:layout_toStartOf="@+id/icon_go_clothes_size"
                    android:background="@null"
                    android:gravity="right"
                    android:inputType="text"
                    android:maxLength="20"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@null"
                    android:textSize="14sp" />

            </RelativeLayout>


            <Button
                android:id="@+id/btn_save_user_info"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/selector_bg_theme_blue_with_corner"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>