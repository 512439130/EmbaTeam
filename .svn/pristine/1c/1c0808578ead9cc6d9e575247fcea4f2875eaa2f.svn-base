<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emba="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <include layout="@layout/include_layout_main_bar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="12dp"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/name"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/icon_register_name_logo"
            android:layout_gravity="center_vertical"
            />

        <com.fala.emba.team.view.edittext.ClearEditText
            android:id="@+id/et_name"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            style="?android:attr/textViewStyle"
            android:textCursorDrawable="@drawable/color_cursor"
            android:layout_marginLeft="5dp"
            android:paddingRight="10dp"
            android:maxLength="8"
            android:textSize="15sp"
            android:inputType="text"
            android:hint="请输入姓名"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_hint_color"/>


    </LinearLayout>





    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="12dp"
        android:background="@color/white"
        >
        
        <ImageView
            android:id="@+id/phone_logo"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/icon_register_phone_logo"
            android:layout_gravity="center_vertical"
            />

        <com.fala.emba.team.view.edittext.ClearEditText
            android:id="@+id/et_phone"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            style="?android:attr/textViewStyle"
            android:textCursorDrawable="@drawable/color_cursor"
            android:layout_marginLeft="5dp"
            android:paddingRight="10dp"
            android:maxLength="11"
            android:textSize="15sp"
            android:inputType="number"
            android:hint="请输入协会初预留的手机号码"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_hint_color"/>


    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="12dp"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/verification_logo"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/icon_register_verification_logo"
            android:layout_gravity="center_vertical"
            />

        <com.fala.emba.team.view.edittext.ClearEditText
            android:id="@+id/et_verification"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            style="?android:attr/textViewStyle"
            android:textCursorDrawable="@drawable/color_cursor"
            android:layout_marginLeft="5dp"
            android:paddingRight="10dp"
            android:maxLength="6"
            android:textSize="15sp"
            android:inputType="number"
            android:hint="请输入验证码"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_hint_color"/>

        <Button
            android:id="@+id/obtain_verification_code"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:minWidth="120dp"
            android:padding="10dp"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/selector_bg_theme_orange_with_corner"
            android:text="获取验证码"

            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="12dp"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/pass_logo"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/icon_register_pass_logo"
            android:layout_gravity="center_vertical"
            />

        <com.fala.emba.team.view.edittext.ClearEditText
            android:id="@+id/et_pass"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            style="?android:attr/textViewStyle"
            android:textCursorDrawable="@drawable/color_cursor"
            android:layout_marginLeft="5dp"
            android:paddingRight="10dp"
            android:maxLength="16"
            android:textSize="15sp"
            android:inputType="textPassword"
            android:hint="请输入6-16位，数字加字母组合密码"
            android:digits="@string/filter_pass_code"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_hint_color" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="12dp"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/repass_logo"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/icon_register_repass_logo"
            android:layout_gravity="center_vertical"
            />

        <com.fala.emba.team.view.edittext.ClearEditText
            android:id="@+id/et_repass"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            style="?android:attr/textViewStyle"
            android:textCursorDrawable="@drawable/color_cursor"
            android:layout_marginLeft="5dp"
            android:paddingRight="10dp"
            android:maxLength="16"
            android:textSize="15sp"
            android:inputType="textPassword"
            android:hint="再次确认密码"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_hint_color"
            android:digits="@string/filter_repass_code"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/selector_bg_theme_blue_with_corner"
        android:text="注册"
        android:layout_gravity="center_vertical"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="100dp"
        />

</LinearLayout>