<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emba="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/icon_app_login"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/include_layout_null_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:layout_marginTop="50dp"
            android:src="@mipmap/icon_logo" />


        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/icon_login_phone" />

            <com.fala.emba.team.view.edittext.ClearEditText
                android:id="@+id/et_login_phone"
                android:layout_width="280dp"
                android:layout_height="40dp"

                android:layout_centerVertical="true"
                android:background="@drawable/bg_stroke_edge_corner"
                android:drawablePadding="10dp"
                android:hint="请输入手机号"
                android:maxLength="11"
                android:inputType="number"
                android:paddingLeft="35dp"
                android:paddingRight="10dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_hint_color"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="14sp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/icon_login_pass" />

            <com.fala.emba.team.view.edittext.ClearEditText
                android:id="@+id/et_login_pass"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_stroke_edge_corner"
                android:drawablePadding="10dp"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:maxLength="16"
                android:paddingLeft="35dp"
                android:paddingRight="10dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_hint_color"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:digits="@string/filter_pass_code"/>

        </RelativeLayout>

        <Button
            android:id="@+id/btn_login"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/selector_bg_theme_blue_with_corner"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="16sp"

            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="用户注册"
                android:textColor="#705E54"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="#705E54" />

            <TextView
                android:id="@+id/forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="忘记密码"
                android:textColor="#705E54"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_qq"
            style="@style/ImageViewIcon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_qq" />

        <ImageView
            android:id="@+id/iv_wechat"
            style="@style/ImageViewIcon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_wechat" />


        <ImageView
            android:id="@+id/iv_weibo"
            style="@style/ImageViewIcon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_weibo" />

    </LinearLayout>


</LinearLayout>